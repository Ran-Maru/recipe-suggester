// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/javascript-node
{
  "name": "Node.js",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:1-22-bookworm",
  // パフォーマンス高速化のためnode_modulesをDocker Volumeに格納する。
  "mounts": [
    "source=${localWorkspaceFolderBasename}-node-modules,target=${containerWorkspaceFolder}/node_modules,type=volume"
  ],
  "postCreateCommand": "sudo chown node node_modules && npm install && npx playwright install --with-deps chromium webkit ffmpeg",

  // Features to add to the dev container. More info: https://containers.dev/features.
  "features": {
    // 最新版のGitを使用するため。/ バージョン固定したくなったら設定を記載予定
    "ghcr.io/devcontainers/features/git": {
      "ppa": "true"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  // Vite, Playwright reporterのデフォルトポート開放
  "forwardPorts": [5173, 9323],
  // Configure tool-specific properties.
  "customizations": {
    "vscode": {
      // エディタの見た目以外はここで拡張機能を導入する。
      "extensions": [
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "ms-playwright.playwright",
        "github.vscode-github-actions",
        "streetsidesoftware.code-spell-checker",
        // 以下ドキュメント作成補助用
        "bierner.markdown-preview-github-styles"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "prettier.requireConfig": true
      }
    }
  }
  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"
}
